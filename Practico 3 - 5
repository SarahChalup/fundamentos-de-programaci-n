// Practico 2 - 5.cpp : Defines the entry point for the console application.
//
// Calcular el producto de los primeros N n√∫meros enteros.
//	P= 1x2x3x........xN

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
float producto (float n);
void main ()
{
	int n,resp;
	cout << "Ingrese cuantos numeros enteros desea calcular";
	cin >> n;
	resp= producto(n);
	cout << "El resultado es: " << resp;
	getch ();
}
float producto (float n)
{
	float p=1;
	for (int x=1; x<=n; x++)
		p=p*x;
	return p;
}
